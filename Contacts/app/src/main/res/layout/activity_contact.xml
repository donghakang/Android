<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ContactActivity">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_alignBottom="@+id/profile_image"
        android:layout_marginLeft="32dp"
        android:text="이름"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textSize="40sp"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/tv_number_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화 번호 (Phone number)"
        android:layout_below="@+id/profile_image"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:id="@+id/profile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_number_temp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="24sp"
        android:text="010-0000-0000"/>

    <TextView
        android:id="@+id/tv_email_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일 (email)"
        android:layout_below="@+id/profile_number"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:id="@+id/profile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_email_temp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="24sp"
        android:text="010-0000-0000"/>


</RelativeLayout>